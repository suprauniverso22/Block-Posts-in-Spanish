{
  "manifest_version": 3,
  "name": "Bloqueador de publicaciones en español",
  "version": "1.5",
  "description": "Bloquea publicaciones en español/castellano de Facebook",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "webNavigation"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js" // Se define el background script
  }
}
