{
  "manifest_version": 3,
  "name": "Bloqueador de publicaciones en español",
  "version": "1.3",
  "description": "Bloquea publicaciones en español/castellano de Facebook",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "webNavigation"
  ],
  "action": {
    "default_popup": "popup.html"
  }
  // Se ha eliminado la sección content_scripts por completo
}
