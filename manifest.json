{
  "manifest_version": 3,
  "name": "Bloqueador de publicaciones en español",
  "version": "1.1",
  "description": "Bloquea publicaciones en español/castellano de Facebook",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "webNavigation"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*"
      ],
      "js": [], // La lista de scripts debe estar vacía
      "run_at": "document_idle"
    }
  ]
}
